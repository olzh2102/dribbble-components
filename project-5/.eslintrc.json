{
  "plugins": ["@typescript-eslint", "import"],
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"],
        "moduleDirectory": ["node_modules", "./**"]
      }
    }
  },
  "rules": {
    "prefer-const": "error",
    "@typescript-eslint/no-explicit-any": "warn",
    "no-console": "warn",
    "max-len": ["warn", { "code": 100 }],
    "import/no-unresolved": 0,
    "import/order": [
      "error",
      {
          "newlines-between": "always",
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index",
            "object",
            "type"
          ],
          "pathGroups": [
            {
              "pattern": "react",
              "group": "external",
              "position": "before"
            },
            {
              "pattern": "next",
              "group": "external",
              "position": "before"
            },
            {
              "pattern": "next/**",
              "group": "external",
              "position": "before"
            },
            {
              "pattern": "common/**",
              "group": "internal"
            },
            {
              "pattern": "~components/**",
              "group": "internal"
            },
            {
              "pattern": "~contexts/**",
              "group": "internal"
            },
            {
              "pattern": "~hooks/**",
              "group": "internal"
            }
          ],
          "pathGroupsExcludedImportTypes": ["builtin"],
          "alphabetize": {
              "order": "asc",
              "caseInsensitive": true
          }
      }
    ]
  }
}
